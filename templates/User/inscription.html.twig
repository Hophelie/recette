{% extends 'base.html.twig' %}

{% block title %}Hello ConnexionController!{% endblock %}

{% block body %}
<div class="text-center"><h2>Vos informations</h2></div>
<div class="container col-4">
    {{form_start(form)}}
    
                {{form_row(form.nom,{'attr': {class:'form-control'}}
                )}}
                {{form_row(form.email,{'attr': {class:'form-control'}}
                )}}
                {{form_row(form.password,{'attr': {class:'form-control'}}
                )}}
                {{form_row(form.confirmPassword,{'attr': {class:'form-control'}}
                )}}
                <hr>
                <div class="text-center">
                {{form_row(form.submit,{'attr':{class:'btn btn-outline-success btn-lg'}}
                )}}</div>
    
    {{form_end(form)}}

</div>

{% endblock %}
